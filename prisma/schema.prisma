// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  fullname        String
  mobile          Int      @unique
  gender          String
  nationalCode    String
  birthday        String
  city            String
  image           String
  fatherName      String
  bloodCategory   String
  specialIllness  String
  emergencyMobile String
  otp             String
  role            Role     @default(USER)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
  team            Team?

  @@map("user")
}

model Group {
  id        Int    @id @default(autoincrement())
  groupName String
}

model Team {
  id            Int    @id @default(autoincrement())
  user          User   @relation(fields: [userId], references: [id])
  userId        Int    @unique
  fullname      String
  natinalCode   String
  image         String
  fatherName    String
  bloodCategory String
}

model Plans {
  id Int @id @default(autoincrement())
}

enum Role {
  CLIENT
  ADMIN
  USER
}
